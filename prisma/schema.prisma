generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String   @db.Text
  access_token String?  @db.Text
  role         UserRole

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  orders Order[]

  @@map("users")
}

model Order {
  id             String @id @default(uuid())
  user_id        String
  address        String
  postal_code    String
  payment_method String
  country        String

  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  order_items OrderItems[]

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("orders")
}

model OrderItems {
  id         String @id @default(uuid())
  tumbler_id String
  order_id   String
  quantity   Int
  color      String

  tumbler Tumbler @relation(fields: [tumbler_id], references: [id], onDelete: Cascade)
  order   Order   @relation(fields: [order_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("order_items")
}

enum UserRole {
  ADMIN
  CUSTOMER
}

model Tumbler {
  id          String      @id @default(uuid())
  category_id String?
  images      Json
  name        String
  brand       String
  stock       Int
  color       Json
  price       Int
  shipping    Boolean     @default(false)
  featured    Boolean     @default(false)
  desc        String?
  type        TypeTumbler @default(Sedang)

  category    Category?     @relation(fields: [category_id], references: [id], onDelete: SetNull)
  order_items OrderItems[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("tumblers")
}

model Category {
  id   String @id @default(uuid())
  name String

  tumblers Tumbler[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("categorys")
}

model File {
  id String @id @default(uuid())

  filename String
  fileblob Bytes

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("files")
}

enum TypeTumbler {
  Besar
  Sedang
  Kecil
}
